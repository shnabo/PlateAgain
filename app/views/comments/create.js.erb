  var commentList = $('.comments-list');
  var newComment = $('<div class="comment-item">');
  var commentCard = $('<p class="card">');

  commentCard.append('<%= @comment.comments %>');
  newComment.append('<%= @comment.reviewer.name %> | ')
            .append('<%= @comment.created_at.strftime("%B %d %Y %I:%M") %> | ')
