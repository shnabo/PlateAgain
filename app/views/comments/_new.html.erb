<div class="card">

  <%= form_for([@user, @user.comments.build]) do |f| %>


  <% if @comment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@comment.errors.count, "error") %> </h2>

    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

    <% if current_user %>
      <h3>Add a Review:</h3>
      <%= f.text_area :comments %>

      <%= f.hidden_field :reviewer_id, value: current_user.id %>
      <%= f.submit 'Submit Review' %>
    <% else %>
      <p> You must be logged in to post a review. <%= link_to "Log in", login_path %> or <%= link_to "Sign up", new_user_path %></p>
    <% end %>
  <% end %>
</div>
