<!DOCTYPE html>
<html>
  <head>
    <title>PlateAgain</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <h1><%= link_to 'PlateAgain', root_url %></h1>
      <nav>
        <%= link_to 'Providers', providers_path %>
        <%= link_to 'Acceptors', acceptors_path %>
        <% if current_user %>
          <%= link_to 'Food Listings', listings_path %>
        <% end %>
      </nav>

      <div class="user-menu">
        <% if current_user %>
          <%= link_to 'My Dashboard', dashboard_path %>
          <%= link_to 'My Listings', my_listings_path(current_user) %>
          <%= link_to 'Create Listing', new_listing_path %>
          <%= link_to 'Log out', logout_path, method: :delete %>
        <% else %>
          <%= link_to 'Log in', login_path %> or <%= link_to 'Sign up', new_user_path %>
        <% end %>
      </div>
    </header>


    <% flash.each do |key, message| %>
      <div class="flash-<%= key %>"><%= message %></div>
    <% end %>

    <main>
      <%= yield %>
    </main>

    <footer>
      &copy; 2017 Team SASPS | <%= link_to 'About PlateAgain', about_path %>
    </footer>
  </body>
</html>
