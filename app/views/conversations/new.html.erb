<h1> New Conversation </h1>

<div class="card">
  <%= form_tag conversations_path, method: 'post' do %>
    <div class="field">
      <%= label :user_id, "Start a conversation with:" %>
        <strong>
        <div>
          <%= Listing.find(params["listing_id"]).user.name %>
        </div> </strong>

    </div>

    <div class="field">
      <%= label :subject, "Subject:" %>

      <%= text_field_tag :subject, @subject %>
    </div>

    <div class="field">
      <%= label :body, "Message:" %>
      <%= text_area_tag :body %>
    </div>

    <%= submit_tag "Send Message" %>
  <% end %>
</div>
