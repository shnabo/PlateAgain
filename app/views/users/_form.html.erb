<%= form_for(@user) do | f | %>

  <p class = "name">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p class= "field">
    <%= f.label :email %><br  />
    <%= f.text_field :email %>
  </p>

  <p class= "address">
    <%= f.label :address %><br  />
    <%= f.text_field :address %>
  </p>

  <p class= "phone">
    <%= f.label :phone %><br  />
    <%= f.text_field :phone %>
  </p>

  <p class= "description">
    <%= f.label :description %><br  />
    <%= f.text_field :description %>
  </p>

  <p class= "registration">
    <%= f.label :registration %><br  />
    <%= f.text_field :registration %>
  </p>
  
  <p class = "submit">
    <%= f.submit "Save" %>
  </p>



<% end %>
